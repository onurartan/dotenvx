{
  "name": "envx-vscode",
  "displayName": "Envx for VSCode",
  "keywords": [
    "envx",
    "dotenv",
    "dotenvx",
    "schema",
    "vscode",
    "formatter",
    "linter",
    "autocomplete",
    "env"
  ],
  "description": "Syntax highlighting and snippets for .envx files",
  "version": "0.0.103",
  "publisher": "Trymagic",
  "engines": {
    "vscode": "^1.100.0"
  },
  "repository": {
    "url": "https://www.github.com/onurartan/dotenvx"
  },
  "categories": [
    "Other"
  ],
  "icon": "assets/icon.png",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dotenvx.generateEnv",
        "title": "Dotenvx: Generate .env file"
      },
      {
        "command": "dotenvx.generateTypes",
        "title": "Dotenvx: Generate Types File"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "dotenvx.generateEnv",
          "when": "resourceExtname == .envx",
          "group": "navigation"
        },
        {
          "command": "dotenvx.generateTypes",
          "when": "resourceExtname == .envx",
          "group": "navigation"
        }
      ]
    },
    "activationEvents": [
      "onLanguage:envx",
      "onCommand:dotenvx.generateEnv",
      "onCommand:dotenvx.generateTypes"
    ],
    "languages": [
      {
        "id": "envx",
        "aliases": [
          "ENVX",
          "envx"
        ],
        "extensions": [
          ".envx"
        ],
        "filenamePatterns": [
          ".envx.*"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "envx",
        "scopeName": "source.envx",
        "path": "./syntaxes/envx.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "envx",
        "path": "./snippets/envx.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
