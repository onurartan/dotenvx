# Extension Name “Envx for VSCode”
# With “Generate .env file” you can convert .envx file to .env file
# vscode -> Command Palette > Dotenvx: Generate .env file to convert to .env
# vscode -> Command Palette > Dotenvx: Generate Types File to create types
DEV_MODE=false

API_URL=${DEV_MODE} ? "http://localhost:3000" : "https://api.example.com"
API_TOKEN=${DEV_MODE} ? "dev-token" : "prod-token"
FULL_API_URL="${API_URL}?token=${API_TOKEN}&env=${NODE_ENV}"

PORT=8080
DATABASE_NAME="db"
MULTILINE_EXAMPLE="""
HELLOOOOOOOO
I am .ENVX the best .env alternative, now you understand me!
"""

WEBSITE_URL="https://movixar.com"
BASE=${NODE_ENV} == "development" ? "http://localhost:3000" : "https://api.example.com"
AUTH_URL="${BASE}/auth"

# schema is always written at the bottom
[DEV_MODE]
type="boolean"

[PORT]  
type="number"
required=true
description="PORT number"

[WEBSITE_URL]
type="url"
required= true

[NODE_ENV]
type="enum"
values=["production", "development", "test"]
default="development"
required=true
# deprecated=true

[ANY_ARG2]
type="string"
default="any value"
required=true